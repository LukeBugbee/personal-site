			$("nav ul li").click(function(){
				$(".clicked-div").addClass("unclicked-div");
				$(".clicked-div").removeClass("clicked-div");
				$(this).children("div").addClass("clicked-div").removeClass("unclicked-div");
			});
		});
	</script>

